<h1><%= link_to "Basket", cart_path(@current_cart), method: :get, class: "btn btn-info ", style: "width: 100px; height: 50px; margin: 20px; padding-top: 11px;" %></h1>
<div class="container">
  <div class="row">
    <% @products.each do |product|%>
      <div class="col-3  m-2 " style="width: auto">
        <div class="card" style="width: 20rem;">
          <%if product.image.attached? %>
            <%= image_tag(product.image, size: "300x300",alt: "Card image cap", class: "card-img-top") %> 
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= product.price %> â‚¹</li>
          </ul>
          <div class="card-body">
            <%=button_to line_items_path(:product_id => product.id), class: "btn btn-warning" , style: "margin-top:15px;" , params:{productID: product.id} do %>
            <i class="glyphicon glyphicon-plus" style="color:black;"></i>
              Add to Basket
            <% end %>
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>