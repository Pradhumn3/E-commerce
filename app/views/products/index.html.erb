<h1><%= button_to "Add Product", new_product_path, method: :get, class: "btn btn-success" %></h1>
<div class="container">
  <div class="row">
    <% @products.each do |product|%>
      <div class="col-3  m-2 " style="width: auto">
        <div class="card" style="width: 20rem;">
          <%if product.image.attached? %>
            <%= image_tag(product.image, size: "300x300",alt: "Card image cap", class: "card-img-top") %> 
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= product.price %> â‚¹</li>
          </ul>
          <div class="card-body">
            <a href="#" class="card-link">Add to Cart</a>
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>