<h1><%= button_to "Add Product", new_product_path, method: :get, class: "btn btn-success" %></h1>
<div style= " height: 50px;
    width: 100px;
    float: right;
    display: block;"><%= link_to "Cart", cart_path(@current_cart), class: "btn btn-info width: 100px"%></div>
<div class="container">
  <div class="row">
    <% @products.each do |product|%>
      <div class="col-3  m-2 " style="width: auto">
        <div class="card" style="width: 20rem;">
          <%if product.image.attached? %>
            <%= image_tag(product.image, size: "300x300",alt: "Card image cap", class: "card-img-top") %> 
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= product.price %> â‚¹</li>
          </ul>
          <div class="card-body">
            <%=button_to line_items_path(:product_id => product.id), class: "btn btn-warning" , style: "margin-top:15px;" , params:{productID: product.id} do %>
            <i class="glyphicon glyphicon-plus" style="color:black;"></i>
              Add to Basket
            <% end %>
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>